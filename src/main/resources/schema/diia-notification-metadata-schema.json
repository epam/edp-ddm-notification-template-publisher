    "title": {
      "type": "string",
      "minLength": 1
    },
    "attributes": {
      "type": "object",
      "properties": {
        "actionType": {
          "type": "string",
          "minLength": 1
        },
        "templateType": {
          "type": "string",
          "minLength": 1
        },
        "shortText": {
          "type": "string",
          "minLength": 1
        }
      },
      "additionalProperties": true,
      "required": [
        "actionType", "templateType", "shortText"
      ]
    }
  },
  "additionalProperties": true,
  "required": [
    "title", "attributes"
  ]
